

<div class="card p-0 col-md-12">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="card-header p-2">
      <h2>Sign up</h2>
    </div>
    <div class="card-body p-2">
      <div class="form-group mb-2">
        <input type='text' autofocus placeholder='Full Name' class='form-control'>
      </div>
      <div class="form-group mb-2">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: 'form-control' %>
      </div>
      <div class="form-group mb-2">
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Pasword", class: 'form-control' %>
      </div>
    </div>

    <div class="card-footer p-2">
      <div class="form-group">
        <%= f.button :submit, "Sign up", class: 'btn btn-primary w-100' %>
      </div>
    </div>
  <% end %>
</div>

<%= render "devise/shared/links" %>
