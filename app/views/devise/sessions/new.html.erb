<div class="mb-4 bg-primary d-flex text-center justify-content-between p-4 text-light">
  <%= link_to root_path, class: "pe-4 text-decoration-none text-light" do %>
    <i class="fas fa-arrow-left fe-2 float-start"></i>
  <% end %>
  <span>Login</span>
  <%= link_to 'Next', new_user_registration_path, class: "text-light" %>

</div>

<div class="card p-0 col-md-12">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="card-haeder p-2">
      <h2>Log in</h2>
    </div>
    <div class="card-body p-2">
      <div class="form-group mb-2">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: 'form-control' %>
      </div>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div>
      <div class="form-group btn-div">
        <%= f.button :submit, "Log in", class: 'btn-primary-action' %>
      </div>
      <div class="text-center btn-div">
        <%= link_to 'Forgot password?', new_user_password_path, class: "btn-secondary-action" %>
      </div>
    </div>

  <% end %>
</div>
