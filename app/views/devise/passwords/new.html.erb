<div class="card p-0 col-md-12">
  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <div class="card-haeder p-2">
      <h2>Forgot your password?</h2>
    </div>
    <%= f.error_notification %>

    <div class="card-body p-2">
      <div class="form-group">
        <%= f.email_field :email,
                    required: true,
                    autofocus: true,
                    autocomplete: "email",
                    class: 'form-control' %>
      </div>
    </div>

    <div>
      <div class="form-group btn-div">
        <%= f.button :submit, "Send me reset password instruction", class: 'btn-primary-action' %>
      </div>
      <div class="text-center btn-div">
        <%= link_to 'Login Instead?', new_user_session_path, class: "btn-secondary-action" %>
      </div>
    </div>
  <% end %>
</div>
