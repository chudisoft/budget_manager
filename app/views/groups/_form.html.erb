<%= form_for(group) do |f| %>
  <div class="card-body">
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control', required: true %>
    </div>
    <div class="form-group">
      <%= f.label :icon %> (URL) <a href='https://www.flaticon.com/free-sticker/stay-at-home_4105449?related_id=4105449' target='_blank'>Get one<a>
      <%= f.text_field :icon, class: 'form-control', required: true %>
    </div>
  </div>
  <div class="form-group btn-div">
    <%= f.submit 'Save', class: 'btn-primary-action' %>
  </div>
<% end %>
